<?xml version="1.0" encoding="utf-8"?>
<net.schnellp.mycapnutrition.MultiSelectListView.ActivatedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_record_row_group">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Test group"
            android:paddingLeft="32dp"
            android:paddingTop="10dp"
            android:id="@+id/tvRecordFoodName"
            android:layout_weight="1"
            android:textStyle="bold">
        </TextView>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvRecordKcal"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="10dp"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvRecordAmount"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingBottom="10dp">
    </TextView>

</net.schnellp.mycapnutrition.MultiSelectListView.ActivatedLinearLayout>