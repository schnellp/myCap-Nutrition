<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:title="Export data"
        android:summary="Export entire database as mccsv (csv-like) file."
        android:key="export_data">
    </Preference>

    <Preference
        android:title="Import data"
        android:summary="Import data from mccsv (csv-like) file."
        android:key="import_data">
    </Preference>

    <Preference
        android:title="Clear data"
        android:summary="Clear entire database."
        android:key="clear_data">
    </Preference>

    <Preference
        android:title="Food"
        android:summary="List of all food entries.">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="net.schnellp.mycapnutrition"
            android:targetClass="net.schnellp.mycapnutrition.View.SelectFood">

            <extra android:name="SELECT_FOOD_PURPOSE" android:value="LIST" />
        </intent>

    </Preference>

    <Preference
        android:title="Units"
        android:summary="List of all unit entries.">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="net.schnellp.mycapnutrition"
            android:targetClass="net.schnellp.mycapnutrition.View.SelectFood">

            <extra android:name="SELECT_FOOD_PURPOSE" android:value="FILTER_UNITS" />
        </intent>

    </Preference>
</PreferenceScreen>